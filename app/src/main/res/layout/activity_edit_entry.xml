<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="@color/colorDefaultBg">

    <Spinner
        android:id="@+id/spinnerDealership"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:textColor="@color/colorListTextUnselected"
        android:background="@android:color/white"
        android:fontFamily="Lato Light">

    </Spinner>

    <Spinner
        android:id="@+id/spinnerType"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/spinnerDealership"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:textColor="@color/colorListTextUnselected"
        android:background="@android:color/white"
        android:fontFamily="Lato Light">
    </Spinner>
    <Spinner
        android:id="@+id/spinnerLot"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/spinnerDealership"
        android:layout_toRightOf="@+id/spinnerType"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:textColor="@color/colorListTextUnselected"
        android:background="@android:color/white"
        android:fontFamily="Lato Light">
    </Spinner>
    <TextView
        android:id="@+id/textViewNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes"
        android:textSize="12pt"
        android:layout_below="@+id/spinnerLot"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/colorListTextUnselected"
        android:fontFamily="Lato Light"
        />

    <EditText
        android:id="@+id/textNotes"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textViewNotes"
        android:gravity="start"
        android:fontFamily="Lato Regular"
        android:background="@android:color/white"
        android:textSize="14sp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="text"/>


</RelativeLayout>