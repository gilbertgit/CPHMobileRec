<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select Scan Type"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:textColor="@color/colorHeader"/>

    <Button
        android:id="@+id/buttonPhysical"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:padding="5dp"
        android:fontFamily="Lato Regular"
        android:background="@drawable/btn_main_green"
        android:textColor="@android:color/white"
        android:text="PHYSICAL"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"/>

    <Button
        android:id="@+id/buttonRescan"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:padding="5dp"
        android:fontFamily="Lato Regular"
        android:background="@drawable/btn_main_green"
        android:textColor="@android:color/white"
        android:text="RESCAN"
        android:textSize="20sp"
        android:layout_below="@+id/buttonPhysical"
        android:layout_alignStart="@+id/buttonPhysical"
        android:layout_marginTop="30dp"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorHeader"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/buttonFilterDealerships"
            android:layout_width="250dp"
            android:layout_height="36dp"
            android:padding="5dp"
            android:fontFamily="Lato Regular"
            android:background="@drawable/btn_main_white"
            android:textColor="@color/colorHeader"
            android:text="FILTER DEALERSHIPS"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>



</RelativeLayout>